<div class="max-w-screen-sm m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="rounded shadow mt-10">
      <div class="text-[#101827] text-lg p-4 bg-slate-100 font-semibold">
          Email and password
      </div>
      <div class="flex justify-between items-center bg-white border-b border-slate-50">
        <div class="w-1/2 text-[#101827] p-4 font-medium" >
          <%= f.label :email %><br />
        </div>
        <div class="w-1/2 px-4 py-2 text-[#101827]">
          <%= f.email_field :email, autocomplete: "email", class: "p-2 border border-slate-100 rounded w-full bg-slate-50 hover:bg-slate-100" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="flex gap-2 items-start bg-yellow-50 p-3 rounded mt-2 shadow">
              <%= heroicon "information-circle", options: { class: "text-yellow-400" }, variant: :solid %> 
              <div >
                <div class="text-yellow-700 text-sm font-semibold">Note</div>
                <div class="text-yellow-600 text-sm [overflow-wrap:anywhere]">Currently waiting confirmation for: <i class="text-indigo-600"><%= resource.unconfirmed_email %></i></div>
              </div>
            </div>
          <% end %>
        </div>
        
      </div>

      <div class="flex justify-between items-center bg-white border-b border-slate-50">
        <div class="w-1/2 text-[#101827] p-4 font-medium" >
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        </div>
        <div class="w-1/2 px-4 py-2 text-[#101827]">
          <%= f.password_field :password, autocomplete: "new-password", class: "p-2 border border-slate-100 bg-slate-50 rounded w-full hover:bg-slate-100" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>

      <div class="flex justify-between items-center bg-white border-b border-slate-50">
        <div class="w-1/2 text-[#101827] p-4 font-medium" >
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="w-1/2 px-4 py-2 text-[#101827]">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 border border-slate-100 bg-slate-50 rounded w-full hover:bg-slate-100" %>
        </div>
      </div>

      <div class="flex justify-between items-center bg-white border-b border-slate-50">
        <div class="w-1/2 text-[#101827] p-4 font-medium" >
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        </div>
        <div class="w-1/2 px-4 py-2 text-[#101827]">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "p-2 border border-slate-100 bg-slate-50 rounded w-full hover:bg-slate-100" %>
        </div>
      </div>
    </div>

    <div class="mt-4 flex gap-4 justify-end items-center">
      <%= link_to "Cancel", user_path(@user), class: "mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-slate-200 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>
      <%= f.submit "Update", class: "cursor-pointer mt-3 inline-flex w-full justify-center rounded-md bg-indigo-600 hover:bg-indigo-500 px-3 py-2 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-gray-300 sm:mt-0 sm:w-auto" %>
    </div>
  <% end %>
</div>