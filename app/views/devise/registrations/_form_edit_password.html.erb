<div class="max-w-screen-full">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mt-10">
      <div class="p-4 border-b border-b-base-300">
          <h3 class="text-base font-semibold leading-7">Email & password</h3>
          <p class="mt-1 max-w-2xl text-sm leading-6 opacity-60">Change your email and password.</p>
      </div>
      <dl class="grid grid-cols-1 sm:grid-cols-2 sm:gap-4">
        <div class="p-4">
            <dt class="text-sm font-medium leading-6 flex gap-2">
                <span><%= f.label :email %></span>
            </dt>
            <dd>
                <%= f.email_field :email, autocomplete: "email", class: "input input-sm input-bordered w-full mb-2 mt-2" %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div class="flex gap-2 items-start bg-yellow-50 p-3 rounded mt-2 shadow">
                    <%= heroicon "information-circle", options: { class: "text-yellow-400" }, variant: :solid %> 
                    <div >
                      <div class="text-yellow-700 text-sm font-semibold">Note</div>
                      <div class="text-yellow-600 text-sm [overflow-wrap:anywhere]">Currently waiting confirmation for: <i class="text-indigo-600"><%= resource.unconfirmed_email %></i></div>
                    </div>
                  </div>
                <% end %>
            </dd>
        </div>

        <div class="p-4">
          <dt class="text-sm font-medium leading-6 flex gap-2">
              <span><%= f.label :password %> <i class="text-sm">(leave blank if no change)</i></span>
          </dt>
          <dd>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-sm input-bordered w-full mb-2 mt-2" %>
            <% if @minimum_password_length %>
              <br />
              <em class="text-sm opacity-70"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </dd>
        </div>

        <div class="p-4">
          <dt class="text-sm font-medium leading-6 flex gap-2">
              <span><%= f.label :password_confirmation %></span>
          </dt>
          <dd>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-sm input-bordered w-full mb-2 mt-2" %>
          </dd>
        </div>

        <div class="p-4">
          <dt class="text-sm font-medium leading-6 flex gap-2">
              <span><%= f.label :current_password %> <i class="text-sm">(confirm changes)</i><br /></span>
          </dt>
          <dd>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-sm input-bordered w-full mb-2 mt-2" %>
          </dd>
        </div>
      </dl>

    <div class="mt-4 flex gap-4 justify-end items-center">
      <%= link_to "Cancel", user_path(@user), class: "btn btn-sm" %>
      <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
</div>