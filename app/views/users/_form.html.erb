<div class="max-w-screen-sm m-auto">
    <%= form_with(model: @user) do |f| %>
        <div class="flex justify-between items-center">
            <div class="flex justify-center items-center gap-4">
                <div class="w-fit">
                    <%= render "shared/user_blob", user: @user %>
                </div>
                <div class="">
                    <div class="font-semibold text-[#101827]">
                        <%= "#{@user.first_name} #{@user.last_name}"%>
                    </div>
                    <div class="text-gray-400 text-sm">
                        Joined on <%= @user.created_at.to_fs(:long_ordinal) %>
                    </div>
                </div>
            </div>
        </div>
        <div class="rounded border border-slate-300 mt-10">
            <div class="text-[#101827] text-lg p-4 border-b font-semibold">
                Contact info
            </div>
            <div class="flex justify-between items-center border-b">
                <div class="w-1/2 text-[#101827] p-4 font-medium" >
                    First name
                </div>
                <div class="w-1/2 px-4 py-2 text-[#101827]">
                    <%= f.text_field :first_name, class: "p-2 border rounded w-full" %>
                </div>
            </div>
            <div class="flex justify-between items-center border-b">
                <div class="w-1/2 text-[#101827] p-4 font-medium" >
                    Last name
                </div>
                <div class="w-1/2 px-4 py-2 text-[#101827]">
                    <%= f.text_field :last_name, class: "p-2 border rounded w-full" %>
                </div>
            </div>
            <div class="flex justify-between items-center border-b">
                <div class="w-1/2 text-[#101827] p-4 font-medium" >
                    Email address
                </div>
                <div class="w-1/2 px-4 py-2 text-[#101827]">
                    <%= f.text_field :email, class: "p-2 border rounded w-full" %>
                </div>
            </div>
            <% if current_user.roles.first.name == 'admin' %>
                <div class="flex justify-between items-center border-b">
                    <div class="w-1/2 text-[#101827] p-4 font-medium" >
                        Role
                    </div>
                    <div class="w-1/2 flex gap-4 items-center capitalize p-4">
                        <%= f.collection_check_boxes :role_ids, Role.all, :id, :name %>
                    </div>
                </div>
            <% end %>
        </div>
    
        <% if @user.errors[:roles].present? %>
            <div class="bg-rose-400 mt-5 p-3 rounded-lg text-white shadow" role="alert">
                <%= @user.errors[:roles].join(';') %>
            </div>
        <% end %>
        
        <div class="mt-4 flex gap-4 justify-end items-center">
            <%= link_to "Cancel", user_path(@user), class: "mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>
            <%= f.button "Save Changes", class: "mt-3 inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-blue-500 sm:mt-0 sm:w-auto" %>
        </div>
    <% end %>

    <div class="rounded border border-slate-300 mt-10">
        <div class="text-red-600 text-lg p-4 border-b font-semibold">
            Delete account
        </div>
        <div class="flex justify-between items-center border-b">
            <div class="w-1/2 text-[#101827] p-4 text-sm" >
                All of your data will be deleted. You will not be able to retrieve your account.
            </div>
            <div class="w-1/2 px-4 py-2 text-[#101827]">
                <div class="float-right">
                    <%= render 'shared/dialog_box', id: 'dialog-1', title: 'Deactivate account', content: 'Are you sure you want to delete your account? All of your data will be permanently removed. This action cannot be undone.' do %>
                        <%= link_to "Delete account", user_path(@user), data: { turbo_method: :delete }, class: "inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto" %>
                    <% end %>

                    <button data-dialog-toggle="dialog-1" class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto">Delete account</button>
                </div>
            </div>
        </div>
    </div>
</div>