<% if user.roles.first.name == "admin" %>
    <div class="text-[0.85rem] text-white px-2 py-1 bg-purple-500 rounded-xl capitalize">
        <%= user.roles.pluck(:name).join(', ') %>
    </div>
<% elsif user.roles.first.name == "staff" %>
    <div class="text-[0.85rem] text-white px-2 py-1 bg-amber-500 rounded-xl capitalize">
        <%= user.roles.pluck(:name).join(', ') %>
    </div>
<% else %>
    <div class="text-[0.85rem] text-white px-2 py-1 bg-emerald-500 rounded-xl capitalize">
        <%= user.roles.pluck(:name).join(', ') %>
    </div>
<% end %>